{
	"compilerOptions": {
		"skipLibCheck": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowJs": true,
		"outDir": "dist",
		"jsx": "preserve",
		"target": "es6",
		"module": "ESNext",
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "types",
	},
	"include": ["src/**/*"]
}