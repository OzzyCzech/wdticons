{
	"compilerOptions": {
		"target": "es5",
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "./types",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react"
	},
	"include": ["src"],
	"exclude": ["dist"]
}